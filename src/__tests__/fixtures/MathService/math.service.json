{
  "name": "Math",
  "description": "Mathematics service",
  "methods": {
    "Sum": {
      "action": "sum",
      "description": "Addition of two numbers",
      "options": {
        "runTimeValidation": {
          "request": true,
          "response": true
        },
        "cache": 10,
        "timeout": 1
      },
      "request": {
        "type": "object",
        "properties": {
          "a": { "type": "number" },
          "b": { "type": "number" }
        },
        "required": ["a", "b"]
      },
      "response": {
        "type": "object",
        "properties": {
          "result": { "type": "number" }
        },
        "required": ["result"]
      }
    },
    "Fibonacci": {
      "action": "fibonacci",
      "description": "Return Fibonacci sequence given length",
      "options": {
        "useStream": {
          "response": true
        }
      },
      "request": {
        "type": "object",
        "properties": {
          "length": { "type": "number" }
        },
        "required": ["length"]
      },
      "response": {
        "type": "number"
      }
    },
    "SumStream": {
      "action": "sumstream",
      "description": "Adding all the numbers of the stream",
      "options": {
        "useStream": {
          "request": true
        }
      },
      "request": {
        "type": "number"
      },
      "response": {
        "type": "object",
        "properties": {
          "result": { "type": "number" }
        },
        "required": ["result"]
      }
    },
    "Multiply": {
      "action": "multiply",
      "description": "Multiplies each number in the stream",
      "options": {
        "useStream": {
          "request": true,
          "response": true
        }
      }
    }
  },
  "events": {
    "list": {
      "Elapsed": {
        "action": "elapsed",
        "options": {
          "stream": true
        },
        "description": "Elapsed time to calculate stream sum",
        "event": {
          "type": "object",
          "properties": {
            "elapsed": { "type": "number" }
          },
          "required": ["elapsed"]
        }
      },
      "Notify": {
        "action": "Notify",
        "description": "Executed method notification",
        "event": {
          "type": "object",
          "properties": {
            "method": { "type": "string" }
          },
          "required": ["method"]
        }
      }
    },
    "streamOptions": {
      "prefix": "stream",
      "actions": [
        {
          "action": "*",
          "storage": "file",
          "retentionPolicy": "limits",
          "discardPolicy": "old",
          "messageTTL": 1209600,
          "duplicateTrackingTime": 86400,
          "replication": 1,
          "rollUps": true
        }
      ]
    }
  }
}
