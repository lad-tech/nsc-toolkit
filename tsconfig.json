{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es2019",
    "allowJs": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2019"],
    "outDir": "./dist",
    "declarationDir": "./dist/types/"
  },
  "include": ["."],
  "exclude": ["node_modules","./examples"]
}
