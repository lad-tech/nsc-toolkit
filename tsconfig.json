{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es2019",
    "allowJs": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2019"],
    "outDir": "./lib",
    "declarationDir": "./lib/types/"
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
